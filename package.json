{
  "name": "@gelight/sml",
  "private": false,
  "version": "0.0.2",
  "description": "Simple Markup Language",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GELight/sml.git"
  },
  "keywords": [
    "ReliableTxt",
    "WhitespaceSV",
    "SimpleML",
    "SML",
    "Simple",
    "Markup",
    "Language"
  ],
  "author": "Mario Linz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/GELight/sml/issues"
  },
  "homepage": "https://github.com/GELight/sml#readme",
  "scripts": {
    "dev": "nodemon --watch 'src/**/*.ts' npm run build",
    "build": "tsc && node dist/index.js",
    "test:unit": "tsc && jest --coverage",
    "bundle": "webpack --config webpack.config.js",
    "build-and-publish-release": "RELEASE_VERSION=$npm_package_version ./build-release.sh",
    "build-docs": "npx typedoc --theme minimal --plugin typedoc-plugin-markdown --out docs src/index.ts"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.37",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "ts-jest": "^26.5.1",
    "tslint": "^5.12.1",
    "typedoc": "^0.20.32",
    "typedoc-plugin-markdown": "^3.6.0",
    "typescript": "^3.3.3"
  },
  "files": [
    "dist"
  ],
  "types": "main.d.ts"
}
